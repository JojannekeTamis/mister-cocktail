<div class="col-sm-offset-1 col-sm-11">
<h1> <%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to "Delete ingredient", cocktail_dose_path(@cocktail, dose), method: :delete %>
    </li>
    <% end %>
</ul>

<button type="button" class="btn btn-success"><%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail) %></button>
<button type="button" class="btn btn-warning"><%= link_to "Back to the cocktail list", cocktails_path(@cocktail) %></button>



</div>


