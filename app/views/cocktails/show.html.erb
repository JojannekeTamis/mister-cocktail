<div class="container" style="width: 900px; margin: 0 auto;">
<div class="col-xs-6">
<h1> <%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to "Delete ingredient", cocktail_dose_path(@cocktail, dose), method: :delete %>
    </li>
    <% end %>
</ul>


<%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), {class: "btn btn-primary" } %>
<%= link_to "Back", cocktails_path(@cocktail), {class: "btn btn-primary" } %>
</div>
<div class="col-xs-6">
<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

</div>
</div>
