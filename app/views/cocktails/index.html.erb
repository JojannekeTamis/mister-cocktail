
<div class="banner" >
    <h1 id="head">Mister Cocktail</h1>
</div>


  <div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background: url('<%= cocktail.photo %>');">
        <div class="card-description">
          <h2><%= cocktail.name %></h2>
        </div>
        <%= link_to "", cocktail_path(cocktail), { class: "card-link" } %>
      </div>
    </div>
    <% end %>
  </div>
    <%= link_to "Add cocktail", new_cocktail_path(@cocktail), {class: "btn btn-primary" } %>
</div>



