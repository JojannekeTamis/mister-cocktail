<div class="col-sm-offset-1 col-sm-11">
<h2>Add a new cocktail:<h2>
<%= form_for(@cocktail) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.submit %>
<% end %>

<button type="button" class="btn btn-warning"><%= link_to "Back to the cocktail list", cocktails_path(@cocktail) %></button>
</div>
